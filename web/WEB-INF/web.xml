<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>srvAcceso</servlet-name>
        <servlet-class>controlador.srvAcceso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvRptUsuario</servlet-name>
        <servlet-class>controlador.srvRptUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvInsUsuario</servlet-name>
        <servlet-class>controlador.srvInsUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvUpdUsuario</servlet-name>
        <servlet-class>controlador.srvUpdUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvDelUsuario</servlet-name>
        <servlet-class>controlador.srvDelUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>srvAcceso</servlet-name>
        <url-pattern>/srvAcceso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvRptUsuario</servlet-name>
        <url-pattern>/srvRptUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvInsUsuario</servlet-name>
        <url-pattern>/srvInsUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvUpdUsuario</servlet-name>
        <url-pattern>/srvUpdUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvDelUsuario</servlet-name>
        <url-pattern>/srvDelUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
